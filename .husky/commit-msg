commit_msg=$(cat "$1")

pattern="^(feat|fix|task)\([0-9]+\): .+"

if ! echo "$commit_msg" | grep -qE "$pattern"; then
  echo "Invalid commit message format!"
  echo ""
  echo "Expected format: <type>(<number>): <description>"
  echo "  type: feat, fix, or task"
  echo "  number: task number"
  echo ""
  echo "Examples:"
  echo "  feat(123): add user authentication"
  echo "  fix(456): resolve login crash"
  echo "  task(789): update dependencies"
  exit 1
fi
